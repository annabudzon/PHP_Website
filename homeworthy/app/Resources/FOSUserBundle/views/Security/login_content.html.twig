{% trans_default_domain 'FOSUserBundle' %}

<div class = "content">
    <h2>Sign in </h2>
    {% if error %}
        <div class="alert">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}
    <form action="{{ path("fos_user_security_check") }}" method="post">
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}
        <div class="container">
            <label for="username">{{ 'security.login.username'|trans }}</label>
            <input type="text" id="username" name="_username" autocomplete="off" placeholder="Enter Username" value="{{ last_username }}" required="required" />

            <label for="password">{{ 'security.login.password'|trans }}</label>
            <input type="password" id="password" name="_password" placeholder="Enter Password" required="required" />

            <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />

            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
            <label class="remember" for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
        </div>

        <div class="clearfix">
            <a href="{{ path('homepage') }}" name="cancel" class="cancelbtn">Cancel</a>
            <span class="psw"><a href="{{ path('fos_user_resetting_request') }}">Forgot password?</a></span>
        </div>

    </form>
    <div class="register">
        <a href="{{ path('fos_user_registration_register') }}">Register</a>
    </div>
</div>


