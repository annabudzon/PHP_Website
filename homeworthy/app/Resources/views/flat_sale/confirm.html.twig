{% extends "base.html.twig" %}
{% block head %}
    {{ parent() }}
    <title>{% block title %}Confirm delete{% endblock %}</title>
    {% block stylesheets %}
        {{ parent() }}
        <link rel="stylesheet" href="{{ asset('css/offers.css') }}" type="text/css"/>
    {% endblock %}
{% endblock %}

{% block header %}
    {{ parent() }}
{% endblock %}

{% block content %}
    <div class = "content">
        <h2>Are you sure you want to delete this offer?</h2>

        <div class="short">
            <ul>
                <h1>{{ flat_sale.title }}</h1>
                <img src="{{ asset('images/default-image.png') }}" alt="Flat photo." width="160" height="100" />
                <li><strong>{{ 'Type of property' }}:</strong> {{flat_sale.propertyType }}</li>
                <li><strong>{{ 'Type of offer' }}:</strong> {{flat_sale.offerType }}</li>
                <li><strong>{{ 'Localization' }}:</strong> {{ flat_sale.localization }}</li>
                <li><strong>{{ 'Publicated' }}:</strong> {{ flat_sale.date|date(" m/d/Y  H:i:s") }}</li>
                <li class="price"><strong>{{ 'Total price' }}: </strong>{{ flat_sale.totalPrice }}</li>
            </ul>
        </div>

        {{ form_start(delete_form) }}
        <button onclick="location.href='{{ path('delete_flat_sale', { 'id': flat_sale.getIdFlat() }) }}'" type="submit" class="btn" >Delete</button>
        {{ form_end(delete_form) }}
        <button onclick="location.href='{{ path('show_flat_sale', {'id': flat_sale.getIdFlat()}) }}'" type="button" class="btn back" >Cancel</button>
    </div>
{% endblock %}

{% block footer %}
    {{ parent() }}
{% endblock %}