            <div class="nav">
                <ul>
                    <li><a href="{{ path('add_room') }}">Room for rent</a></li>
                    <li><a href="{{ path('add_flat_rent') }}">Flat for rent</a></li>
                    <li><a href="{{ path('add_flat_sale') }}">Flat for sale</a></li>
                </ul>
            </div>
        </div>
